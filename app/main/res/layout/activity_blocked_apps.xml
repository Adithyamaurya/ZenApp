<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block Apps"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Limit Counter -->
    <TextView
        android:id="@+id/limitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Blocked Apps: 0/8"
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/limitText"
        android:text="Select up to 8 apps that require writing a comprehensive essay to unlock."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/settings_item_background"
        android:padding="16dp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="2dp" />

    <!-- Apps List -->
    <ListView
        android:id="@+id/appsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/instructionText"
        android:layout_above="@id/bottomText"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:background="@color/background_primary"
        android:padding="16dp" />

    <!-- Bottom Text -->
    <TextView
        android:id="@+id/bottomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”’ Blocked apps require 200+ word with 75+ quality score"
        android:textColor="@color/text_hint"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-light" />

</RelativeLayout>
