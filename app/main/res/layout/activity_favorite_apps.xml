<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Favorite Apps"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Warning/Counter Text -->
    <TextView
        android:id="@+id/warningText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Select up to 8 apps to display on home screen"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/settings_item_background"
        android:padding="16dp" />

    <!-- Apps List -->
    <ListView
        android:id="@+id/appsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/warningText"

        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:background="@drawable/apps_card_background"
        android:padding="16dp" />



</RelativeLayout>