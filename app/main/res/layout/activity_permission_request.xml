<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum App Blocking Setup"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Warning -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These permissions enable COMPLETE app blocking that cannot be easily bypassed"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:background="@drawable/settings_item_background"
            android:padding="16dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Permission Container -->
        <LinearLayout
            android:id="@+id/permissionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Overlay Permission -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_list_item_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Display Over Other Apps"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block apps with overlay screen"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/overlayPermissionCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <Button
                    android:id="@+id/overlayPermissionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grant"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Accessibility Permission -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_list_item_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accessibility Service"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor all app launches"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/accessibilityPermissionCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <Button
                    android:id="@+id/accessibilityPermissionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grant"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Battery Optimization -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_list_item_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ignore Battery Optimization"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep blocking service active"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/batteryOptimizationCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <Button
                    android:id="@+id/batteryOptimizationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grant"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Usage Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_list_item_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usage Access"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor app usage patterns"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/usageStatsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <Button
                    android:id="@+id/usageStatsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grant"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Auto Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_list_item_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-Start Permission"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start blocking on device boot"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/autoStartCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <Button
                    android:id="@+id/autoStartButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Device Admin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_list_item_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maximum Security Mode"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prevent easy uninstallation"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/deviceAdminCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <Button
                    android:id="@+id/deviceAdminButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant All Permissions First"
            android:textColor="@color/text_primary"
            android:background="@drawable/settings_item_background"
            android:textSize="12sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:enabled="false" />

        <!-- Warning Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" All permissions are required for maximum app blocking protection"
            android:textColor="@color/text_hint"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</ScrollView>
