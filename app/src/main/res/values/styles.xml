    <!-- Other styles remain the same -->
    <style name="AppListItemStyle">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/app_list_item_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:background">@drawable/settings_item_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_time</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DateTextStyle">
        <item name="android:textColor">?attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="FavoriteAppStyle">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:background">@drawable/app_list_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>